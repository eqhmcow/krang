body {
  background-color: <tmpl_var background_color>;
  color:            <tmpl_var text_color>;
  font-family:      Verdana,Helvetica,Arial,sans-serif;
  font-size:        12px;
  margin:			  0px 10px;
  padding:          0px;
}
html {
	width: 770px;
	height: 100%;
}
/*** Positioning ***/

#header {
  padding: 			  10px; 
  width:				  760px;
  height:           47px; 
  background-color: <tmpl_var background_color>;	
}

#header div.logo {
	position: static;
	left: 0px;
	top: 15px;
  background-color: <tmpl_var background_color>;	
}
#header div.dkblu {	
  position: absolute;
  top:         40px;
  left:      180px; 
  border-top: <tmpl_var dark_color> 1px solid;
  background-color: <tmpl_var background_color>;  
  height:           1px;
  width:            590px; 
}

#header div.blue { 
  position: absolute;
  top:         43px;
  left:      10px; 
  height:          14px;  
  background-color: <tmpl_var light_color>;
  width: 760px;
}	

#header div.title { 
	position: absolute;
	left: 184px;
	top: 23px; 
  width:            240px;	
  background-color: <tmpl_var background_color>;	
}

#footer {
	position: absolute;
	top:             282px;
	left:             10px;
	background-color: <tmpl_var light_color>;
   color:            <tmpl_var text_color>;
	width:            750px;
	padding-left:     10px;
	padding-top:      4px;
	padding-bottom:   4px;
	text-align:       left;
}
#login {
	position:          absolute;
	left:              220px;
	top:               100px;
	width:             340px; 
}

div.boxb {
  border-right:     1px <tmpl_var border_color> solid;
  border-left:      1px <tmpl_var border_color> solid;
  border-bottom:    1px <tmpl_var border_color> solid;
  margin-top:       3px;
}

.dark-bar { 
  background-color: <tmpl_var dark_color>;
  color:            <tmpl_var light_text_color>;
  padding:          4px 4px 0px 4px;
  height:           20px;
  font-weight:      bold;
  font-family:      Verdana,Helvetica,Arial,sans-serif;
  font-size:        12px;
  text-align:       center;
}

.light { 
  background-color: <tmpl_var light_color>;
  color:            <tmpl_var text_color>;
  padding-top:          3px;
  padding-left:        40px;
  padding-bottom:       6px;
  margin-top:           0px;
  text-align:        center;
}

.light p {
	text-align:      right;
	padding-right:     80px;
}

.button-bar {
  background-color: <tmpl_var bright_color>;
  color:            <tmpl_var text_color>;
  text-align:       right;
  padding:          3px;
  margin-top:       7px;
}

.button-bar input {
  margin-left:      15px;
}
.button {
   background-color: <tmpl_var background_color>;
   color:            #003466;
   font-family:      Verdana,Helvetica,Arial,sans-serif;
   font-size:        12px;
}

.error {
	color: Red;	
	position:          absolute;
	left:              220px;
	top:               70px;
}

