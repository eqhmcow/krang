    </tr>

    </tbody>

    </table></div>

  </tmpl_unless>

</tmpl_if>



<div class="panel capped">

<tmpl_if bulk_edit>
  <input value="Done Bulk Editing <tmpl_var name_of_this_element>" onclick="save_and_leave_bulk_edit()" type="button" class="west">

<tmpl_else>  

  <tmpl_if is_root>

    <tmpl_if may_publish>
      <input value="Publish" onclick="save_and_publish()" type="button" class="west">
    </tmpl_if>
    <input value="Check In To" onclick="check_in()" type="button" class="west">
    <select name="checkin_to" class="west"><tmpl_loop desk_loop>
      <option value="<tmpl_var escape=html choice_desk_id>"<tmpl_if is_selected> selected</tmpl_if>><tmpl_var escape=html choice_desk_name> Desk</option>
    </tmpl_loop></select>
    <input value="Delete" onclick="remove_story()" type="button" class="west">

  <tmpl_else>

     <input value="Done Editing <tmpl_var name_of_this_element>" onclick="save_and_go_up()" type="button" class="west">
     <tmpl_if allow_delete>
       <input value="Delete <tmpl_var name_of_this_element>" onclick="remove_element()" type="button" class="west">
     </tmpl_if>

  </tmpl_if>

  <input value="Save Story &amp; Stay" onclick="db_save_and_stay()" type="button">
  <input value="Save Story" onclick="db_save()" type="button">

</tmpl_if>

</div>

