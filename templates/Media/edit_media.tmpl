  <input type="button" value="Save" onClick="do_save()">
  <input type="button" value="Save &amp; Stay" onClick="do_save_stay()">
  <input type="button" value="Publish" onClick="do_publish()">
  <input type="reset" value="Reset" onClick="do_reset()">
