// updates the order pull downs to stay consistent
function update_order(obj, prefix) {
    var form  = obj.form;
    var requestedIndex = obj.selectedIndex;
    var i;

    // get list of relevent form elements
    var elem = new Array();
    for (i = 0; i < form.elements.length ; i++) {
