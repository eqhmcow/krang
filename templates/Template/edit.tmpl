  function update_filename (e) {
     var targ = e.form.elements["filename"];
     if (e.selectedIndex == 0) { 
        targ.readOnly = false;
        targ.style.backgroundColor = 'white';
        targ.value = '';
     } else {
        targ.value = e.options[e.selectedIndex].value + ".tmpl";
        targ.readOnly = true;
        targ.style.backgroundColor = '#DDDDDD';
     }
  }
</script>

