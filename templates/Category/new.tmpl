<tmpl_include header.tmpl>

<script language="JavaScript" type="text/javascript">
  nav_edit_mode();
                
  function create() {
     document.new_category.rm.value = 'create';
     document.new_category.submit();
  }
  function cancel() {
     if (confirm("Are you sure?")) {
        document.new_category.rm.value = 'find';
        document.new_category.submit();
     }
  }
</script>

<form method=post name=new_category>
<input type=hidden name=rm>


<div class=dark-bar>New Category</div>
<p>

<tmpl_loop alerts_loop>
  <div class="alert">* <tmpl_var alert></div>
</tmpl_loop>

<table width=100% cellpadding=0 cellspacing=0>

<tr class=form-head>
<td colspan=2>Properties</td>
</tr>

<tr>
<td class=form-cell width=20%>* Parent</td>
<td class=form-cell>
  <tmpl_if bad_parent_id><span class="invalid"></tmpl_if>
    <tmpl_var parent_chooser>
  <tmpl_if bad_parent_id></span></tmpl_if>
</td>
</tr>

<tr>
<td class=form-cell>* Directory</td>
<td class=form-cell>
   <input <tmpl_if bad_dir>class="invalid"</tmpl_if> type=text size=15 value="<tmpl_var escape=html dir>" name=dir>
</td>
</tr>

</td>
</tr>

</table>

<div class=button-bar>
  <input type=button value="Create" onclick="create()">
  <input type=reset value="Reset">
  <input type=button value="Cancel" onclick="cancel()">
</div>

</form>


<tmpl_include footer.tmpl>
        