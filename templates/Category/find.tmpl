<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Help.set( 'category' );
} );

add_category = function()
{
  Krang.form_submit( 'add_category_form' );
}

<tmpl_if row_count>
  edit_category = function( id )
  {
    Krang.form_submit( 'edit_category_form', { category_id: id } );
  }

  delete_selected = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to delete!' );
    else if ( confirm( 'Are you SURE you want to delete these Categories?' ) )
      Krang.form_submit( 'krang_pager_form', { rm: 'delete_selected' }, { to_top: false } );
  }
</tmpl_if>
</script>

<h2>
