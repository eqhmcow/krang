      <td rowspan="4" align="center"><tmpl_if media_id><a href="javascript:preview_media('<tmpl_var escape=HTML media_id>')"></tmpl_if><tmpl_if thumbnail_path><p>Thumbnail</p><img border="0" src="<tmpl_var thumbnail_path>"></tmpl_if><tmpl_if media_id></a></tmpl_if></td>
    </tr>
    <tr>
      <td>Title:</td>
