<script language="javascript" type="text/javascript">
   var nav_emode = 0;
   var nav_emsg  = "Are you sure you want to discard your unsaved changes?";

   /* Call to set edit mode with a particular message.  If msg is */
   /* empty will use the default message. */
   function nav_edit_mode(msg) {
     nav_emode = 1;
     if (msg && msg.length) {
        nav_emsg = msg;
     }
   }

   function nav_goto(loc) {
     if (!nav_emode || confirm(nav_emsg)) {
        window.location = loc;
     }
   }

   <tmpl_if nav_global_admin>
     document.onkeypress = debug_catcher;
     function debug_catcher (evt) {
        evt = (evt) ? evt : ((event) ? event : null);
        if (evt == null) return;
        if (!evt.altKey) return;
        if (!evt.ctrlKey) return;
        var code = evt.keyCode ? evt.keyCode : evt.charCode;
        if (code == 100) {
            window.open("debug.pl", "", "width=800, height=700");
        }
     }

   </tmpl_if>

</script>

