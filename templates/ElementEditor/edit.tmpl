<script language=javascript>

  function edit_children(p) {
        document.forms[0].rm.value = 'save_and_jump';
        document.forms[0].jump_to.value = p;
        document.forms[0].submit();
  }

  var containers = new Array();
  <tmpl_loop container_loop>
