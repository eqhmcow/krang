<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Help.set();
} );
</script>

<h2>
Publish

<tmpl_if stories><!--(db2)hack plural:-->
  <tmpl_loop stories>
    <tmpl_if __first__>
      <tmpl_if __last__>
        Story
      <tmpl_else>
        Stories
      </tmpl_if>
    </tmpl_if>
  </tmpl_loop>
</tmpl_if>

<tmpl_if media>
  <tmpl_if stories>
    &amp;
  </tmpl_if>

  Media
</tmpl_if>
</h2>

<form action="publisher.pl?will_redirect" method="post" class="non_ajax">

<input name="rm" value="publish_assets" type="hidden">
<tmpl_loop asset_id_list>
  <input name="asset_id_list" value="<tmpl_var escape=html id>" type="hidden">
</tmpl_loop>

<h3>
Publication Materials
</h3>

<div class="table-container">
<img src="/static/<tmpl_var krang_install_id>/images/corner-top-left.gif" class="left-corner">
<img src="/static/<tmpl_var krang_install_id>/images/corner-top-right.gif" class="right-corner">
<table cellspacing="0" class="result" summary="">

<colgroup>
<col class="c-id">
<col class="c-type">
<col>
<col>
<tmpl_if media>
  <col class="c-thumb">
</tmpl_if>
<col>
</colgroup>

<thead>
<tr>
<th class="f">ID</th>
<th>Type</th>
<th>Title</th>
<th>URL</th>
<tmpl_if media>
  <th></th>
</tmpl_if>
<th class="l">Status</th>
</tr>
</thead>

<!--FIXME(zebra):-->
<tbody>

<tmpl_if media>

  <tmpl_loop stories>
    <tr<tmpl_if checked_out> class="err"</tmpl_if>>
    <td class="f"><tmpl_var escape=html id></td>
    <td>Story</td>
    <td><tmpl_var escape=html title></td>
    <td><tmpl_var url><!--:markup--></td>
    <td></td>
    <td class="l"><tmpl_var status><!--:markup--></td>
    </tr>
  </tmpl_loop>

  <tmpl_loop media>
    <tr<tmpl_if checked_out> class="err"</tmpl_if>>
    <td class="f"><tmpl_var escape=html id></td>
    <td>Media</td>
    <td><tmpl_var escape=html title></td>
    <td><tmpl_var url><!--:markup--></td>
    <td><tmpl_if thumbnail>
      <a title="Preview <tmpl_var escape=html title>" href="javascript:Krang.preview('media','<tmpl_var escape=html id>')"><img alt="" src="<tmpl_var escape=html thumbnail>"></a>
    </tmpl_if></td>
    <td class="l"><tmpl_var status><!--:markup--></td>
    </tr>
  </tmpl_loop>

<tmpl_else>

  <tmpl_loop stories>
    <tr<tmpl_if checked_out> class="err"</tmpl_if>>
    <td class="f"><tmpl_var escape=html id></td>
    <td>Story</td>
    <td><tmpl_var escape=html title></td>
    <td><tmpl_var url><!--:markup--></td>
    <td class="l"><tmpl_var status><!--:markup--></td>
    </tr>
  </tmpl_loop>

</tmpl_if>

</tbody>

</table>

<h3>
Publication Time
</h3>

<table class="request" summary=""><!--:FIX(db2)-->

<colgroup>
<col class="c-label">
<col>
</colgroup>

<tbody>

<tr>
<th colspan="2">
<input name="publish_now" value="1" type="radio" checked>
Immediate
</th>
</tr>

<tr<tmpl_if bad_publish_date> class="err"</tmpl_if>>
<th>
<input name="publish_now" value="0" type="radio">
Scheduled For
</th>
<td>
<tmpl_var publish_date_chooser>
</td>
</tr>

</tbody>

</table>

<div class="panel capped">
<input name="Publish" value="Publish" type="submit">
</div>

</form>

<tmpl_include footer.tmpl>

