a img             { border: 0; }

form { margin: 0; padding: 0; }

.button       { background: #EEE url("/static/<tmpl_var krang_install_id>/images/bkg-button-mini.gif") 0 50% repeat-x !important; color: <tmpl_var LinkColor> !important; width: auto !important; overflow: visible; margin: 0 5px 0 0; border: 1px solid #BBB; border-color: #EEE #BBB #BBB #EEE; padding: .1em .5em; font-size: 1em; line-height: 1; }
