.glue { white-space: nowrap !important; }
.wrap { white-space: normal !important; }
.cram { margin: 0 !important; }

.enclose { overflow: hidden; }

.clearfix:after { content: "."; display: block; height: 0; clear: both; visibility: hidden; }
