<tmpl_include header.tmpl>

<script language="JavaScript" type="text/javascript">
  nav_edit_mode();
                
  function create() {
     document.new_story.rm.value = 'create';
     document.new_story.submit();
  }
  function cancel() {
     document.new_story.rm.value = 'cancel';
     document.new_story.submit();
  }
</script>

<form method=post name=new_story>
<input type=hidden name=rm>


<div class=dark-bar>New Story</div>
<p>

<tmpl_loop alerts_loop>
  <div class="alert">* <tmpl_var alert></div>
</tmpl_loop>

<table width=100% cellpadding=0 cellspacing=0>

<tr class=form-head>
<td colspan=2>Properties</td>
</tr>

<tr>
<td class=form-cell width=20%>* Type</td>
<td class=form-cell width=80%>
    <tmpl_if bad_type><span class="invalid"></tmpl_if>
       <tmpl_var type_selector>
    <tmpl_if bad_type></span></tmpl_if>
</td>
</tr>

<tr>
<td class=form-cell>* Title</td>
<td class=form-cell>
   <input <tmpl_if bad_title>class="invalid"</tmpl_if> type=text size=40 value="<tmpl_var escape=html title>" name=title>
</td>
</tr>

<tr>
<td class=form-cell>* Slug</td>
<td class=form-cell>
   <input <tmpl_if bad_slug>class="invalid"</tmpl_if> type=text size=15 value="<tmpl_var escape=html slug>" name=slug>
</td>
</tr>

<tr>
<td class=form-cell>* Cover Date</td>
<td class=form-cell>
    <tmpl_if bad_cover_date><span class="invalid"></tmpl_if>
       <tmpl_var cover_date_selector>
    <tmpl_if bad_cover_date></span></tmpl_if>
</td>
</tr>

<tr>
<td class=form-cell>* Site / Category</td>
<td class=form-cell valign=middle>
    <tmpl_if bad_category_id><span class="invalid"></tmpl_if>
      <tmpl_var category_chooser>
    <tmpl_if bad_category_id></span></tmpl_if>
</td>
</tr>

</table>

<div class=button-bar>
  <input type=button value="Create" onclick="create()">
  <input type=reset value="Reset">
  <input type=button value="Cancel" onclick="cancel()">
</div>


<tmpl_include footer.tmpl>
        