#!/usr/bin/perl

use strict;
use warnings;

use Config;
use File::Spec;

BEGIN {
    my $lib = File::Spec->catfile($ENV{KRANG_ROOT}, 'lib');
    $ENV{PERL5LIB} = $ENV{PERL5LIB} ? "$ENV{PERL5LIB}:${lib}" : "${lib}";
    unshift @INC, $lib, "$lib/".$Config{archname};
}

use Krang::Schedule::Daemon;
use Krang::Script;

Krang::Schedule::Daemon->run;
