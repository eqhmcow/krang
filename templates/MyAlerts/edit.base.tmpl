  <table cellspacing="0" class="result select_row" summary="">

  <colgroup>
  <col>
  <col>
  <col>
  <col class="series">
  </colgroup>

  <thead>
  <tr>
  <th class="f"><tmpl_lang Action></th>
  <th><tmpl_lang Site/Category></th>
  <th><tmpl_lang Desk></th>
  <th class="series l"><input name="checkallbox" id="checkallbox" value="1" type="checkbox" onclick="Krang.check_all(this,'alert_delete_list')"></th>
  </tr>
  </thead>

  <tbody><tmpl_loop alert_loop>
    <tr<tmpl_unless __odd__> class="even"</tmpl_unless>>
    <td class="f"><tmpl_var escape=html action></td>
    <td><tmpl_if category><tmpl_var escape=html category><tmpl_else><tmpl_lang Any></tmpl_if></td>
    <td><tmpl_if desk><tmpl_var escape=html desk><tmpl_else><tmpl_lang Any></tmpl_if></td>
    <td class="series l"><input name="alert_delete_list" value="<tmpl_var escape=html alert_id>" type="checkbox" class="hilite-row"></td>
    </tr>
  </tmpl_loop></tbody>

  <tr class="command-row">
  <td class="f" colspan="3">&nbsp;</td>
  <td class="series l"><input value="<tmpl_lang Delete>" onclick="delete_checked()" type="button" class="mini-list-btn"></td
  </tr>

  </table></div>

