<tmpl_include header.tmpl>

<script type="text/javascript">
var use_editor = <tmpl_if is_text>!Prototype.Browser.WebKit && Krang.my_prefs().syntax_highlighting == 1<tmpl_else>false</tmpl_if>;

save_editor_text = function() {
    if(use_editor) mediaEditor.toggleEditor();
}

Krang.onload( function() {
  Krang.Nav.edit_mode();
  Krang.Help.set( 'media_<tmpl_if add_mode>new<tmpl_else>edit</tmpl_if>' );
} );

publish_media_preview = function() {
  save_editor_text();
  Krang.Form.submit('edit_media_form', { rm: 'save_and_preview' });
}

do_checkin = function() {
  save_editor_text();
  Krang.Form.submit( 'edit_media_form', { rm: 'checkin_<tmpl_if add_mode>add<tmpl_else>edit</tmpl_if>' });
}

do_save = function() {
  save_editor_text();
  Krang.Form.submit( 'edit_media_form', { rm: 'save_<tmpl_if add_mode>add<tmpl_else>edit</tmpl_if>' });
}

do_save_stay = function() {
  save_editor_text();
  Krang.Form.submit( 'edit_media_form', { rm: 'save_stay_<tmpl_if add_mode>add<tmpl_else>edit</tmpl_if>' }, { to_top: false });
}

edit_contribs = function() {
  save_editor_text();
  Krang.Form.submit('edit_media_form', { rm: 'save_and_associate_media' });
}

save_and_edit_schedule = function() {
  save_editor_text();
  Krang.Form.submit('edit_media_form', { rm: 'save_and_edit_schedule' });
}

save_and_view_log = function() {
  save_editor_text();
  Krang.Form.submit('edit_media_form', { rm: 'save_and_view_log' });
}

<tmpl_unless add_mode>
<tmpl_if is_image>
transform_image = function() {
  Krang.Form.submit('edit_media_form', { rm: 'transform_image' });
}
</tmpl_if>
</tmpl_unless>

<tmpl_if may_publish>
  publish_media = function() {
    save_editor_text();
    Krang.Form.submit('edit_media_form', { rm: 'save_and_publish' });
  }
</tmpl_if>

<tmpl_if add_mode>
  do_cancel_add = function()
  {
    if (confirm(Krang.L10N.loc("Discard new Media?"))) {
      Krang.Form.submit( 'edit_media_form', { rm: 'find' });
    }
  }
<tmpl_else>
  do_cancel_edit = function()
  { 
    if (confirm(<tmpl_if cancel_goes_to_workspace>Krang.L10N.loc("Discard any unsaved changes and go to Workspace?")
                <tmpl_else><tmpl_if cancel_changes_owner>Krang.L10N.loc("Discard any changes and check the Media back in?")
                <tmpl_else>Krang.L10N.loc("Discard any unsaved changes and go back to Find Media screen?")
                </tmpl_if></tmpl_if>)) {
        Krang.Form.submit( 'edit_media_form', {rm: 'cancel_edit'});
    }
  }
  do_delete = function()
  {
    if ( confirm( Krang.L10N.loc('Are you SURE you want to delete this Media?') ) )
      Krang.Form.submit( 'delete_media_form' );
  }

  revert_version = function()
  {
    var f = document.forms['edit_media_form'];
    var v = f.selected_version.options[f.selected_version.selectedIndex].value;

    if ( v == <tmpl_var version> ) {
      alert(Krang.L10N.loc('You cannot revert to the current version!'));
    } else if ( confirm( Krang.L10N.loc('Are you SURE you want to discard any unsaved changes and revert to this old version?') ) ) {
      Krang.Form.submit('edit_media_form', { rm: 'revert_version' });
    }
  }

  view_version = function()
  {
    var f = document.forms['edit_media_form'];
    var v = f.selected_version.options[f.selected_version.selectedIndex].value;

    if (v == <tmpl_var version>) {
	if (!confirm(Krang.L10N.loc('You are currently editing that version. View its saved content?'))) {
	    return;
        }
    }	

    Krang.Form.submit('edit_media_form', { rm: 'view_version' });
  }
</tmpl_if>

// Register CodePress's onload event:
Krang.onload( function() { 
    if( use_editor ) CodePress.run();
} );

</script>

