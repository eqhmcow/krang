<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Nav.edit_mode();
  Krang.Help.set( 'story_edit' );
} );

save_and_stay = function() {
  Krang.ElementEditor.run_save_hooks();
  Krang.Form.submit('edit', { rm: 'save_and_stay' }, { to_top: false });
}

<tmpl_if is_root>

  <tmpl_if story_id>  //:ever not the case?(db2)
    save_and_view_log = function() {
        Krang.ElementEditor.run_save_hooks();
        Krang.Form.submit('edit', { rm: 'save_and_view_log' });
    }

    save_and_edit_schedule = function() {
        Krang.ElementEditor.run_save_hooks();
        Krang.Form.submit('edit', { rm: 'save_and_edit_schedule' });
    }
  </tmpl_if>

  save_and_edit_contribs = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'save_and_edit_contribs' });
  }

  //:only from within category_chooser = function(db2)
  add_category = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'add_category' }, { to_top: false });
  }
  replace_category = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'replace_category' }, { to_top: false });
  }

  set_primary_category = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'set_primary_category' }, { to_top: false });
  }

  remove_categories = function() {
    if( confirm( 'Are you SURE you want to delete these Categories?' ) ) {
        Krang.ElementEditor.run_save_hooks();
        Krang.Form.submit('edit', { rm: 'delete_categories' }, { to_top: false });
    }
  }

  check_in = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'check_in' });
  }

  revert = function() {
    var f = document.forms['edit'];
    var v = f.version.options[f.version.selectedIndex].value;

    if ( confirm('Are you SURE you want to discard changes and revert to version ' + v + '?') ) {
        Krang.Form.submit('edit', { rm: 'revert' });
    }
  }

  save_and_view = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'save_and_view' });
  }

  remove_story = function() {
    if ( confirm('Are you SURE you want to delete this Story?') ) {
        Krang.Form.submit('edit', { rm: 'delete' });
    }
  }

  db_save = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'db_save' });
  }

  db_save_and_stay = function() {
    Krang.ElementEditor.run_save_hooks();
    Krang.Form.submit('edit', { rm: 'db_save_and_stay' }, { to_top: false });
  }

  usr_toggled_cat_idx = function() {
    document.edit.slug.disabled = document.edit.cat_idx.checked;
    if (document.edit.slug.disabled) {	
        document.getElementById('slug').className = "disabled"; 
	document.edit.slug_before_empty.value = document.edit.slug.value; 
	document.edit.slug.value = '';
    } else {
	// in case the user checks and then unchecks 'Category Index'...
        document.getElementById('slug').className = ""; 
	document.edit.slug.value = document.edit.slug_before_empty.value;
    }
  }

  <tmpl_if may_publish>
    save_and_publish = function() {
        Krang.ElementEditor.run_save_hooks();
        Krang.Form.submit('edit', { rm: 'save_and_publish' });
    }
  </tmpl_if>

<tmpl_else>

  db_save = function() {
    if ( confirm('Save this Story and return to your Workspace?') ) {
      Krang.ElementEditor.run_save_hooks();
      Krang.Form.submit('edit', { rm: 'db_save' });
    }
  }

  <tmpl_if bulk_edit>

    save_and_leave_bulk_edit = function() {
        Krang.ElementEditor.run_save_hooks();
        Krang.Form.submit('edit', { rm: 'save_and_leave_bulk_edit' });
    }

  <tmpl_else>

    <tmpl_if allow_delete>
      remove_element = function()
      {
        if ( confirm('Are you SURE you want to delete this Element?') ) {
            Krang.ElementEditor.run_save_hooks();
            Krang.Form.submit('edit', { rm: 'delete_element' }, { to_top: false });
        }
      }
    </tmpl_if>

    save_and_go_up = function() {
        Krang.ElementEditor.run_save_hooks();
        Krang.Form.submit('edit', { rm: 'save_and_go_up' });
    }

  </tmpl_if>

</tmpl_if>
</script>

<form name="edit" action="story.pl" method="post" enctype="multipart/form-data">

<input name="rm" value="edit" type="hidden">

<tmpl_if is_root><tmpl_if story_id><p class="cram east">
  <input value="View Log" onclick="save_and_view_log()" type="button" class="button">
  <input value="View Schedule" onclick="save_and_edit_schedule()" type="button" class="button">
  <input name="returning_from_root" value="1" type="hidden">
  <input name="slug_before_empty" value="<tmpl_var slug_before_empty>" type="hidden">
</p></tmpl_if></tmpl_if>

<h2>
Edit Story
</h2>

<h3>
Properties
</h3>

<table class="request" summary="">

<colgroup>
<col class="c-label">
<col>
</colgroup>

<tbody>

<tr>
<th>URL</th>
<td><tmpl_var url><!--:markup--></td>
</tr>

<tr>
<th>Type</th>
<td><tmpl_var escape=html type></td>
</tr>

<tr>
<th>Story ID</th>
<td><tmpl_var escape=html story_id></td>
</tr>

</tbody>

<tmpl_if is_root>
  <tbody class="half">

  <tr<tmpl_if bad_title> class="err"</tmpl_if>>
  <th>*Title</th>
  <td><input name="title" value="<tmpl_var escape=html title>"></td>
  </tr>

  <tmpl_if show_slug>
    <tr<tmpl_if bad_slug> class="err"</tmpl_if>>
    <th><tmpl_if require_slug>*</tmpl_if>Slug</th>
    <td><input id="slug" name="slug" value="<tmpl_var escape=html slug>" <tmpl_if cat_idx> disabled class="disabled"</tmpl_if>>
    <tmpl_unless require_slug>
      <input name="cat_idx" type="checkbox" onclick="usr_toggled_cat_idx()" class="pushright small hcenter"<tmpl_if cat_idx> checked</tmpl_if>>
      Category Index
    </tmpl_unless>
    </td>
    </tr>
  </tmpl_if>

  </tbody>

  <tbody>

  <tr<tmpl_if bad_cover_date> class="err"</tmpl_if>>
  <th>*Cover Date</th>
  <td><tmpl_var cover_date_selector></td>
  </tr>

  <tr>
  <th>Contributors</th>
  <td class="glue">
  <tmpl_if contribs_loop>
    <tmpl_loop contribs_loop>
      <tmpl_var escape=html first_name> <tmpl_var escape=html last_name> (<tmpl_var escape=html type>)
      <tmpl_unless __last__><br></tmpl_unless>
    </tmpl_loop>
    </td>
    </tr>

    <tr>
    <th></th>
    <td>
    <input value="Edit" onclick="save_and_edit_contribs()" type="button" class="button">
  <tmpl_else>
    <input value="Add" onclick="save_and_edit_contribs()" type="button" class="button">
  </tmpl_if>
  </td>
  </tr>

  <tr>
  <th>Priority</th>
  <td><tmpl_var priority_selector></td>
  </tr>

  <tr>
  <th>Current Version</th>
  <td><tmpl_var escape=html version></td>
  </tr>

  <tr>
  <th>Published Version</th>
  <td><tmpl_unless published_version>[n/a]<tmpl_else><tmpl_var escape=html published_version></tmpl_unless></td>
  </tr>

  <tr>
  <th>All Versions</th>
  <td>
  <tmpl_var version_selector>
  <input value="Revert" onclick="revert()" type="button" class="button">
  <input value="View" onclick="save_and_view()" type="button" class="button">
  </td>
  </tr>

  </tbody>

</tmpl_if>

</table>

<!--ElementEditor/edit.tmpl-->
<tmpl_include /ElementEditor/edit.tmpl>
<!--:ElementEditor/edit.tmpl-->

<tmpl_if is_root>

  <h3>
  Sites/Categories
  </h3>

  <tmpl_unless category_loop>

    <p class="naught">
    No Categories assigned.
    </p>

    <tmpl_var add_category_chooser><!--:FIXME(db2)-->

  <tmpl_else>

    <table class="request select_row" summary=""><!--:FIX(db2)-->

    <colgroup>
    <col class="series">
    <col>
    <col>
    <col>
    <col>
    <col class="series">
    </colgroup>

    <thead>
    <tr>
    <th class="f series">Primary</th>
    <th>Site</th>
    <th colspan="2">Category</th>
    <th></th>
    <th class="l series"><tmpl_loop category_loop><tmpl_if __first__><tmpl_unless __last__><input type="checkbox" onclick="Krang.check_all(this,'cat_remove_')"></tmpl_unless></tmpl_if></tmpl_loop></th>  <!--:ick, but should work(db2)-->
    </tr>
    </thead>

    <tbody>

    <tmpl_loop category_loop>
      <tr<tmpl_unless __odd__> class="even"</tmpl_unless>>
      <td class="series"><input name="primary_category_id" value="<tmpl_var escape=html category_id>" type="radio"<tmpl_if __first__> checked</tmpl_if>></td>
      <td><tmpl_var escape=html site></td>
      <td colspan="2"><tmpl_var escape=html category></td>
      <td class="series"><input name="category_to_replace_id" value="<tmpl_var escape=html category_id>" type="radio"<tmpl_if selected_for_replace> checked</tmpl_if>></td>
      <td class="series"><tmpl_unless __first__>
        <input name="cat_remove_<tmpl_var escape=html category_id>" type="checkbox">
      </tmpl_unless></td>
      </tr>
    </tmpl_loop>

    <tr>
    <td class="series"><tmpl_loop category_loop><tmpl_if __first__><tmpl_unless __last__><input value="Set" onclick="set_primary_category()" type="button" class="button"></tmpl_unless></tmpl_if></tmpl_loop></td><!--:ick, but should work(db2)-->
    <td colspan="3"><tmpl_var add_category_chooser></td>
    <td><tmpl_var replace_category_chooser></td>
    <td class="series"><tmpl_loop category_loop><tmpl_if __first__><tmpl_unless __last__><input value="Delete" onclick="remove_categories()" type="button" class="button"></tmpl_unless></tmpl_if></tmpl_loop></td><!--:ick, but should work(db2)-->
    </tr>

    </tbody>

    </table>

  </tmpl_unless>

</tmpl_if>



<div class="panel capped">

<tmpl_if bulk_edit>
  <input value="Done Bulk Editing <tmpl_var name_of_this_element>" onclick="save_and_leave_bulk_edit()" type="button" class="west">

<tmpl_else>  

  <tmpl_if is_root>

    <tmpl_if may_publish>
      <input value="Publish" onclick="save_and_publish()" type="button" class="west">
    </tmpl_if>
    <input value="Check In To" onclick="check_in()" type="button" class="west">
    <select name="checkin_to" class="west"><tmpl_loop desk_loop>
      <option value="<tmpl_var escape=html choice_desk_id>"<tmpl_if is_selected> selected</tmpl_if>><tmpl_var escape=html choice_desk_name> Desk</option>
    </tmpl_loop></select>
    <input value="Delete" onclick="remove_story()" type="button" class="west">

  <tmpl_else>

     <input value="Done Editing <tmpl_var name_of_this_element>" onclick="save_and_go_up()" type="button" class="west">
     <tmpl_if allow_delete>
       <input value="Delete <tmpl_var name_of_this_element>" onclick="remove_element()" type="button" class="west">
     </tmpl_if>

  </tmpl_if>

  <input value="Save Story &amp; Stay" onclick="db_save_and_stay()" type="button">
  <input value="Save Story" onclick="db_save()" type="button">

</tmpl_if>

</div>


</form>

<tmpl_include footer.tmpl>

