   /* Call to set edit mode with a particular message.  If msg is */
   /* empty will use the default message. */
   function nav_edit_mode(msg) {
     nav_emode = 1;
     if (msg && msg.length) {
        nav_emsg = msg;
     }
   }

   function nav_goto(loc) {
     if (!nav_emode || confirm(nav_emsg)) {
        window.location = loc;
     }
   }
</script>

