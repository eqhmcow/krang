<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Help.set( 'preference' );
} );

update_prefs = function() {
    Krang.form_submit('edit_pref_form', {}, { to_top : false });
}
</script>

<h2>
Preferences
</h2>

<form name="edit_pref_form" action="my_pref.pl" method="post">

<input name="rm" value="update_prefs" type="hidden">
<tmpl_if password_only>
  <input name="password_only" value="1" type="hidden">
</tmpl_if>

<table class="request" summary=""><!--:FIXME(db2)-->

<colgroup>
<col class="c-label">
<col>
</colgroup>

<tbody>

<tmpl_unless password_only>
  <tr>
  <th>Search Results per Page</th>
  <td>
  <tmpl_var search_results_selector>
  </td>
  </tr>

  <tr>
  <th>Autocomplete Searches?</th>
  <td><tmpl_var use_autocomplete_selector></td>
  </tr>

  <tr>
  <th>Timeout for Messages</th>
  <td>
  <tmpl_var message_timeout_selector>
  seconds
  </td>
  </tr>
</tmpl_unless>

<tr>
<th>Change Account Password</th>
<td>
<input name="new_password" type="password">
(new password)
<br>
<input name="new_password_repeat" type="password">
(repeat)
</td>
</tr>

<tr>
<td colspan="2">
Password must be at least 8 characters long and include at least one number and one symbol.
</td>
</tr>

</tbody>

</table>

<div class="panel capped">
<input value="Update Preferences" type="button" onclick="update_prefs()">
</div>

</form>

<tmpl_include footer.tmpl>

