<!-- END Administration permissions -->


</div>



<div class="button-bar">
    <input type="submit" value="Save">
    <tmpl_unless associate_mode><input type="button" value="Save &amp; Stay" onClick="save_stay()"></tmpl_unless>
    <input type="reset" value="Reset">
    <tmpl_unless add_mode><input type="button" value="Delete" onClick="delete_group()"></tmpl_unless>
    <input type="button" value="Cancel" onClick="cancel_group_change()">
</div>


<!-- End edit_group_form -->
