} );

do_save_stay = function()
{
  templateEditor.toggleEditor();
  Krang.Form.submit( 'edit_template_form', { rm: '<tmpl_if add_mode>add<tmpl_else>edit</tmpl_if>_save_stay' }, { to_top: false });
}

